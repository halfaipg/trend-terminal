<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bitcoin Trend Following Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            color: #ffffff;
            min-height: 100vh;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
            padding: 20px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            backdrop-filter: blur(10px);
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #00ff88, #00aaff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header p {
            font-size: 1.1rem;
            color: #cccccc;
        }

        .controls {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 30px;
            flex-wrap: wrap;
        }

        .control-group {
            display: flex;
            align-items: center;
            gap: 10px;
            background: rgba(255, 255, 255, 0.05);
            padding: 10px 15px;
            border-radius: 8px;
            backdrop-filter: blur(10px);
        }

        .control-group label {
            font-weight: 500;
            color: #cccccc;
        }

        .control-group select, .control-group button {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: white;
            padding: 8px 12px;
            border-radius: 6px;
            font-size: 14px;
        }

        .control-group button {
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .control-group button:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-1px);
        }

        .status-panel {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .status-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 20px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .status-card h3 {
            font-size: 1.1rem;
            margin-bottom: 15px;
            color: #00ff88;
        }

        .status-value {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .status-label {
            font-size: 0.9rem;
            color: #cccccc;
        }

        .position-long { color: #00ff88; }
        .position-short { color: #ff4444; }
        .position-flat { color: #ffaa00; }

        .chart-container {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 20px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            margin-bottom: 30px;
        }

        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
            gap: 10px;
        }

        .chart-title {
            font-size: 1.3rem;
            font-weight: 600;
        }
        
        .chart-legend {
            display: flex;
            gap: 20px;
            font-size: 0.9rem;
            align-items: center;
        }
        
        .legend-item {
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        .legend-color {
            width: 20px;
            height: 3px;
            border-radius: 2px;
        }

        .chart-timeframe {
            display: flex;
            gap: 5px;
        }

        .timeframe-btn {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: white;
            padding: 6px 12px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.3s ease;
        }

        .timeframe-btn.active {
            background: #00ff88;
            color: #1a1a1a;
            font-weight: bold;
        }

        .timeframe-btn:hover:not(.active) {
            background: rgba(255, 255, 255, 0.2);
        }

        #chart {
            height: 500px;
            width: 100%;
            border-radius: 8px;
            background: rgba(0, 0, 0, 0.3);
        }

        .loading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1000;
            display: none;
            text-align: center;
        }
        
        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid rgba(255, 255, 255, 0.1);
            border-top: 4px solid #00aaff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto;
        }
        
        .loading-text {
            color: #00aaff;
            font-size: 14px;
            margin-top: 15px;
            font-weight: 500;
            letter-spacing: 1px;
            animation: pulse 1.5s ease-in-out infinite;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .chart-explainer {
            background: rgba(0, 170, 255, 0.05);
            border: 1px solid rgba(0, 170, 255, 0.2);
            border-radius: 8px;
            padding: 12px 16px;
            margin-top: 12px;
            font-size: 13px;
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.6;
        }
        
        .chart-explainer strong {
            color: #00aaff;
            font-weight: 600;
        }

        .error {
            background: rgba(255, 68, 68, 0.1);
            border: 1px solid rgba(255, 68, 68, 0.3);
            color: #ff4444;
            padding: 15px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .success {
            background: rgba(0, 255, 136, 0.1);
            border: 1px solid rgba(0, 255, 136, 0.3);
            color: #00ff88;
            padding: 15px;
            border-radius: 8px;
            margin: 20px 0;
        }

        @media (max-width: 768px) {
            .container {
                padding: 10px;
            }
            
            .header h1 {
                font-size: 2rem;
            }
            
            .controls {
                flex-direction: column;
                align-items: center;
            }
            
            .status-panel {
                grid-template-columns: 1fr;
            }
            
            #chart {
                height: 400px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Bitcoin Trend Following Dashboard</h1>
            <p>Hull Moving Average Strategy with TradingView Charts</p>
        </div>

        <div class="controls">
            <div class="control-group">
                <label for="timeframe">Timeframe:</label>
                <select id="timeframe">
                    <option value="1h">1 Hour</option>
                    <option value="4h">4 Hours</option>
                    <option value="1d">1 Day</option>
                </select>
            </div>
            <div class="control-group">
                <button id="updateBtn">Update Data</button>
            </div>
            <div class="control-group">
                <button id="testDiscordBtn">Test Discord</button>
            </div>
        </div>

        <div class="status-panel">
            <div class="status-card">
                <h3>Current Position</h3>
                <div class="status-value position-flat" id="position">FLAT</div>
                <div class="status-label">Strategy Position</div>
            </div>
            <div class="status-card">
                <h3>Last Signal</h3>
                <div class="status-value" id="lastSignal">HOLD</div>
                <div class="status-label">Most Recent Signal</div>
            </div>
            <div class="status-card">
                <h3>Current Price</h3>
                <div class="status-value" id="currentPrice">$0.00</div>
                <div class="status-label" id="priceChange">24h: 0.00%</div>
            </div>
            <div class="status-card">
                <h3>Trend</h3>
                <div class="status-value position-flat" id="trendDirection">NEUTRAL</div>
                <div class="status-label">Market Trend</div>
            </div>
        </div>

        <div class="chart-container">
            <div class="chart-header">
                <div class="chart-title">Bitcoin Trend Following</div>
                <div class="chart-legend">
                    <div class="legend-item">
                        <div class="legend-color" style="background: linear-gradient(90deg, #ff4444 0%, #00ff88 100%);"></div>
                        <span>Short-term Trend</span>
                    </div>
                    <div class="legend-item">
                        <div class="legend-color" style="background: linear-gradient(90deg, #ff8844 0%, #44ffff 100%);"></div>
                        <span>Long-term Trend</span>
                    </div>
                </div>
                <div class="chart-timeframe">
                    <button class="timeframe-btn" data-tf="1h">1H</button>
                    <button class="timeframe-btn" data-tf="4h">4H</button>
                    <button class="timeframe-btn active" data-tf="1d">1D</button>
                </div>
            </div>
            <div id="chart" style="position: relative; height: 500px;">
                <div class="loading">
                    <div class="loading-spinner"></div>
                    <div class="loading-text">LOADING CHART...</div>
                </div>
            </div>
            <div class="chart-explainer">
                <strong>How it works:</strong> The colored lines show market trends. 
                <span style="color: #00ff88;">●</span> Green/Cyan = Uptrend &nbsp;|&nbsp; 
                <span style="color: #ff4444;">●</span> Red/Orange = Downtrend &nbsp;|&nbsp; 
                When both trends align, the signal is stronger.
            </div>
        </div>
    </div>

    <!-- TradingView Lightweight Charts -->
    <script src="https://unpkg.com/lightweight-charts@4.1.3/dist/lightweight-charts.standalone.production.js"></script>
    
    <script>
        // Global variables
        let chart = null;
        let candlestickSeries = null;
        let hullSeries = null;
        let trendSeries = null;
        let currentTimeframe = '1d';
        let updateInterval = null;
        let priceUpdateInterval = null;
        let todayCandle = null;  // Store today's OHLC data

        // Initialize the application
        function initApp() {
            // Wait for TradingView library to load
            if (typeof LightweightCharts === 'undefined') {
                console.error('TradingView Lightweight Charts library not loaded');
                setTimeout(initApp, 100); // Retry in 100ms
                return;
            }
            
            initializeChart();
            setupEventListeners();
            loadData();
            startLivePriceUpdates();
            
            // Auto-update chart every 5 minutes
            updateInterval = setInterval(loadData, 5 * 60 * 1000);
        }
        
        async function updateLivePrice() {
            try {
                // Update current price display
                const priceResponse = await fetch('/api/price/live');
                const priceData = await priceResponse.json();
                
                const priceEl = document.getElementById('currentPrice');
                priceEl.textContent = '$' + priceData.price.toLocaleString('en-US', { 
                    minimumFractionDigits: 2, 
                    maximumFractionDigits: 2 
                });
                
                // Update 24h change
                const changeEl = document.getElementById('priceChange');
                const change = priceData.change_24h;
                const changeText = `24h: ${change >= 0 ? '+' : ''}${change.toFixed(2)}%`;
                changeEl.textContent = changeText;
                changeEl.style.color = change >= 0 ? '#00ff88' : '#ff4444';
                
                // Update today's candle in the database
                await fetch('/api/update-today', { method: 'POST' });
                
                // Reload chart data to show updated today candle (only for daily)
                if (currentTimeframe === '1d') {
                    await loadData();
                }
                
            } catch (error) {
                console.error('Error updating live price:', error);
            }
        }
        
        function startLivePriceUpdates() {
            // Update immediately
            updateLivePrice();
            
            // Then update every 10 seconds
            if (priceUpdateInterval) {
                clearInterval(priceUpdateInterval);
            }
            priceUpdateInterval = setInterval(updateLivePrice, 10000);
        }
        
        function stopLivePriceUpdates() {
            if (priceUpdateInterval) {
                clearInterval(priceUpdateInterval);
                priceUpdateInterval = null;
            }
        }

        document.addEventListener('DOMContentLoaded', initApp);

        function setupEventListeners() {
            // Timeframe selection
            document.getElementById('timeframe').addEventListener('change', function(e) {
                currentTimeframe = e.target.value;
                updateTimeframeButtons();
                loadData();
            });

            // Timeframe buttons
            document.querySelectorAll('.timeframe-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    currentTimeframe = this.dataset.tf;
                    document.getElementById('timeframe').value = currentTimeframe;
                    updateTimeframeButtons();
                    loadData();
                });
            });

            // Update button
            document.getElementById('updateBtn').addEventListener('click', function() {
                loadData();
            });

            // Test Discord button
            document.getElementById('testDiscordBtn').addEventListener('click', function() {
                testDiscord();
            });
        }

        function updateTimeframeButtons() {
            document.querySelectorAll('.timeframe-btn').forEach(btn => {
                btn.classList.toggle('active', btn.dataset.tf === currentTimeframe);
            });
        }

        function initializeChart() {
            console.log('Initializing chart...');
            console.log('LightweightCharts available:', typeof LightweightCharts);
            console.log('createChart available:', typeof LightweightCharts.createChart);
            
            // Create chart
            chart = LightweightCharts.createChart(document.getElementById('chart'), {
                width: document.getElementById('chart').clientWidth,
                height: 500,
                layout: {
                    background: { color: 'transparent' },
                    textColor: '#ffffff',
                },
                grid: {
                    vertLines: { color: 'rgba(255, 255, 255, 0.1)' },
                    horzLines: { color: 'rgba(255, 255, 255, 0.1)' },
                },
                crosshair: {
                    mode: LightweightCharts.CrosshairMode.Normal,
                },
                rightPriceScale: {
                    borderColor: 'rgba(255, 255, 255, 0.2)',
                },
                timeScale: {
                    borderColor: 'rgba(255, 255, 255, 0.2)',
                    timeVisible: true,
                    secondsVisible: false,
                    rightOffset: 12,  // Add padding on the right
                    barSpacing: 10,   // More space between bars (zoomed in)
                    minBarSpacing: 0.5,
                },
            });

            // Create series
            console.log('Chart created, adding series...');
            
            candlestickSeries = chart.addCandlestickSeries({
                upColor: '#00ff88',
                downColor: '#ff4444',
                borderUpColor: '#00ff88',
                borderDownColor: '#ff4444',
                wickUpColor: '#00ff88',
                wickDownColor: '#ff4444',
            });

            // Hull MA 200 (short-term signal) - Green/Red
            hullSeries = chart.addLineSeries({
                color: '#00ff88',
                lineWidth: 3,
                title: '',  // No title on right
                lastValueVisible: false,  // No price label
                priceLineVisible: false,  // No horizontal line
                lineType: 2, // 2 = curved line for smoother appearance
            });

            // Hull MA 1000 (long-term trend) - Orange/Cyan
            trendSeries = chart.addLineSeries({
                color: '#44ffff',
                lineWidth: 3,
                title: '',  // No title on right
                lastValueVisible: false,  // No price label
                priceLineVisible: false,  // No horizontal line
                lineType: 2, // 2 = curved line for smoother appearance
            });

            // Handle resize
            window.addEventListener('resize', function() {
                chart.applyOptions({
                    width: document.getElementById('chart').clientWidth,
                });
            });
        }

        async function loadData() {
            try {
                showLoading();
                
                // Load signal data
                const signalResponse = await fetch(`/api/signal/${currentTimeframe}`);
                const signalData = await signalResponse.json();
                
                if (signalData.error) {
                    throw new Error(signalData.error);
                }
                
                // Update status panel
                updateStatusPanel(signalData);
                
                // Load chart data - request more for daily (all history)
                const limit = currentTimeframe === '1d' ? 10000 : 1000;
                console.log(`Loading ${currentTimeframe} with limit ${limit}`);
                const chartResponse = await fetch(`/api/chart/${currentTimeframe}?limit=${limit}`);
                const chartData = await chartResponse.json();
                
                if (chartData.error) {
                    throw new Error(chartData.error);
                }
                
                // Update chart
                updateChart(chartData);
                
                hideLoading();
                
            } catch (error) {
                console.error('Error loading data:', error);
                showError('Failed to load data: ' + error.message);
            }
        }

        function updateStatusPanel(signalData) {
            // Update position
            const positionEl = document.getElementById('position');
            const position = signalData.current_position || 'flat';
            positionEl.textContent = position.toUpperCase();
            positionEl.className = `status-value position-${position}`;
            
            // Update last signal
            const lastSignal = signalData.last_signal || 'hold';
            document.getElementById('lastSignal').textContent = 
                lastSignal.toUpperCase().replace('_', ' ');
            
            // Update price
            document.getElementById('currentPrice').textContent = 
                '$' + signalData.close_price.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
            
            // Update trend direction (4 states based on Hull vs Trend)
            const trendEl = document.getElementById('trendDirection');
            let trendState = 'NEUTRAL';
            let trendClass = 'position-flat';
            
            if (signalData.hull_value && signalData.trend_value) {
                const hull = signalData.hull_value;
                const trend = signalData.trend_value;
                const price = signalData.close_price;
                
                if (hull > trend && price > hull) {
                    trendState = 'STRONG BULL';
                    trendClass = 'position-long';
                } else if (hull > trend && price < hull) {
                    trendState = 'WEAK BULL';
                    trendClass = 'position-long';
                } else if (hull < trend && price < hull) {
                    trendState = 'STRONG BEAR';
                    trendClass = 'position-short';
                } else if (hull < trend && price > hull) {
                    trendState = 'WEAK BEAR';
                    trendClass = 'position-short';
                }
            }
            
            trendEl.textContent = trendState;
            trendEl.className = `status-value ${trendClass}`;
        }

        function calculateSlope(data, index) {
            if (index < 1) return 0;
            const current = data[index].value;
            const previous = data[index - 1].value;
            return current - previous;
        }

        function getSlopeColor(slope, intensity = 1.0, isLongTerm = false) {
            // Different colors for short-term vs long-term
            const alpha = Math.min(0.4 + intensity * 0.6, 1.0);
            
            if (isLongTerm) {
                // Long-term: Orange/Cyan
                if (slope > 0) {
                    return `rgba(68, 255, 255, ${alpha})`;  // Cyan for up
                } else {
                    return `rgba(255, 136, 68, ${alpha})`;  // Orange for down
                }
            } else {
                // Short-term: Green/Red
                if (slope > 0) {
                    return `rgba(0, 255, 136, ${alpha})`;  // Bright green for up
                } else {
                    return `rgba(255, 68, 68, ${alpha})`;  // Red for down
                }
            }
        }

        function getSlopeWidth(slope, baseWidth, priceRange) {
            // Calculate normalized slope (percentage of price range)
            const normalizedSlope = Math.abs(slope) / priceRange;
            // Scale width from base to base*3 based on slope
            const width = baseWidth + (normalizedSlope * 1000 * baseWidth * 2);
            return Math.min(Math.max(width, baseWidth), baseWidth * 3);
        }

        function updateChart(chartData) {
            console.log(`Updating chart with ${chartData.data.length} bars`);
            if (chartData.data.length > 0) {
                const first = new Date(chartData.data[0].time);
                const last = new Date(chartData.data[chartData.data.length - 1].time);
                console.log(`Data range: ${first.toISOString()} to ${last.toISOString()}`);
            }
            
            // Prepare candlestick data
            const candlestickData = chartData.data.map(bar => ({
                time: bar.time / 1000, // Convert to seconds
                open: bar.open,
                high: bar.high,
                low: bar.low,
                close: bar.close,
            }));

            // Calculate price range for slope normalization
            const prices = chartData.data.map(b => b.close);
            const priceRange = Math.max(...prices) - Math.min(...prices);

            // Prepare Hull MA 200 data (short-term signal) - Green/Red
            const hullData = chartData.data
                .filter(bar => bar.hull !== null)
                .map((bar, idx, arr) => {
                    const dataPoint = {
                        time: bar.time / 1000,
                        value: bar.hull,
                    };
                    
                    if (idx > 0) {
                        const slope = bar.hull - arr[idx - 1].hull;
                        const normalizedSlope = Math.abs(slope) / priceRange;
                        dataPoint.color = getSlopeColor(slope, normalizedSlope * 1000, false);
                    }
                    
                    return dataPoint;
                });

            // Prepare Hull MA 1000 data (long-term trend) - Orange/Cyan
            const trendData = chartData.data
                .filter(bar => bar.trend !== null)
                .map((bar, idx, arr) => {
                    const dataPoint = {
                        time: bar.time / 1000,
                        value: bar.trend,
                    };
                    
                    if (idx > 0) {
                        const slope = bar.trend - arr[idx - 1].trend;
                        const normalizedSlope = Math.abs(slope) / priceRange;
                        dataPoint.color = getSlopeColor(slope, normalizedSlope * 1000, true);
                    }
                    
                    return dataPoint;
                });

            // Update series
            candlestickSeries.setData(candlestickData);
            hullSeries.setData(hullData);
            trendSeries.setData(trendData);
            
            console.log(`Hull points: ${hullData.length}, Trend points: ${trendData.length}`);

            // Fit content with padding on the right
            chart.timeScale().fitContent();
            
            // Add right padding by showing a visible range
            const visibleLogicalRange = chart.timeScale().getVisibleLogicalRange();
            if (visibleLogicalRange) {
                const barsCount = visibleLogicalRange.to - visibleLogicalRange.from;
                // Show 80% of the data (more zoomed in) with 10% padding on right
                chart.timeScale().setVisibleLogicalRange({
                    from: visibleLogicalRange.to - barsCount * 0.8,
                    to: visibleLogicalRange.to + barsCount * 0.1
                });
            }
            
            hideLoading();
        }

        async function testDiscord() {
            try {
                const response = await fetch('/api/test-discord', { method: 'POST' });
                const result = await response.json();
                
                if (result.status === 'success') {
                    showSuccess('Discord test alert sent successfully!');
                } else {
                    showError('Failed to send Discord test alert');
                }
            } catch (error) {
                console.error('Error testing Discord:', error);
                showError('Error testing Discord: ' + error.message);
            }
        }

        function showLoading() {
            const loading = document.querySelector('.loading');
            if (loading) loading.style.display = 'block';
        }

        function hideLoading() {
            const loading = document.querySelector('.loading');
            if (loading) loading.style.display = 'none';
        }

        function showError(message) {
            const errorEl = document.createElement('div');
            errorEl.className = 'error';
            errorEl.textContent = message;
            document.querySelector('.container').insertBefore(errorEl, document.querySelector('.status-panel'));
            
            setTimeout(() => errorEl.remove(), 5000);
        }

        function showSuccess(message) {
            const successEl = document.createElement('div');
            successEl.className = 'success';
            successEl.textContent = message;
            document.querySelector('.container').insertBefore(successEl, document.querySelector('.status-panel'));
            
            setTimeout(() => successEl.remove(), 3000);
        }

        // Cleanup on page unload
        window.addEventListener('beforeunload', function() {
            if (updateInterval) {
                clearInterval(updateInterval);
            }
        });
    </script>
</body>
</html>
